#%RAML 1.0
title: SoapDistpatcher
baseUri: https://anypoint.mulesoft.com/mocking/api/v1/links/b60a2007-93a6-4bb8-9ac7-bffd535684e3/ # baseUri: http://localhost:8080/servicios/{version}
mediaType:  [application/xml, application/json]
version: v1
types: 
  Factura:
    type: !include factura.xsd
  Paiyment:
    type: !include payment.xsd
/payment:
   get:
       description: Retorna la cantidad a pagar
       body:
         application/xml:
          type: Factura
          example: !include example.raml
       responses:
           200:
               body:
                  application/xml:
                    type: Paiyment
           404:
               description: La factura no existe
   post:
       description: Permite realizar el pago de la factura existente
       body:
          application/xml:
            type: Paiyment
            example: !include GetExample.raml
       responses:
           200:
               body:
                   application/xml:
                     properties:
                        idFactura: number
                        mensajeOK: string
           404:
               body:
                   application/xml:
                     properties:
                       idFactura: number
                       mensajeBad: string
   delete:
       description: Permite compensar el pago de la factura existente
       body:
         application/xml:
           type: Paiyment
           example: !include GetExample.raml
       responses:
           200:
               body:
                   application/xml:
                     properties:
                       idFactura: number
                       mensajeOK: string
           404:
               body:
                  application/xml:
                    properties:
                      idFactura: number
                      mensajeBad: string
